<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace = "需要指定的mapper接口"-->
<mapper namespace="com.dao.StudentMapper">

    <!--方式一：按照查询嵌套处理：-->
    <resultMap id="studentTeacherV1" type="Student">
        <result property="id" column="id"></result>
        <result property="name" column="name"></result>
        <!--        复杂的属性，需要的单独处理
            对象：association
            集合：collection
            -->
        <association property="teacher" column="tid" javaType="Teacher" select="getTeacher"/>
    </resultMap>
    <select id="selectStudent_v1" resultMap="studentTeacherV1">
        select * from student
    </select>
    <select id="getTeacher" resultType="Teacher">
        select * from teacher where id = #{tid}
    </select>

    <!-- 方式二：按照结果嵌套处理-->
    <resultMap id="studentTeacherV2" type="Student">
        <result property="id" column="id"></result>
        <result property="name" column="name"></result>
        <association property="teacher" javaType="Teacher">
            <result property="name" column="tname"></result>
            <result property="id" column="tid"></result>
        </association>
    </resultMap>
    <select id="selectStudent_v2" resultMap="studentTeacherV2">
        select s.id id, s.name name ,t.name tname,t.id tid from student s ,teacher t where s.tid=t.id
    </select>

</mapper>


